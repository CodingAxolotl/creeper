#!/bin/bash

COMMAND="$1"
ARG="$2"

BASE_DIR="$(cd "$(dirname "$0")" && pwd)"

case "$COMMAND" in
  install)
    bash "$BASE_DIR/../lib/install.sh" "$ARG"
    ;;
  update)
    bash "$BASE_DIR/../lib/update.sh"
    ;;
  help|"")
    bash "$BASE_DIR/../lib/help.sh"
    ;;
  *)
    echo "‚ùå Unknown command: $COMMAND"
    echo "Run 'creeper help' to see available commands."
    ;;
esac
